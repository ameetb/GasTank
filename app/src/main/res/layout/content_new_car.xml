<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_new_car"
    tools:context="com.example.ameet.gastank.NewCarActivity"
    android:background="@drawable/carbon_fiber">

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:id="@+id/carNameEditText"
        android:layout_alignTop="@+id/carNameTextView"
        android:layout_alignRight="@+id/mileageEditText"
        android:layout_alignEnd="@+id/mileageEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Car Name:"
        android:id="@+id/carNameTextView"
        android:padding="5dp"
        android:background="@color/color1AA"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/backButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mileage"
        android:id="@+id/mileageTextView"
        android:padding="5dp"
        android:background="@color/color1AA"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/carNameEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:background="@color/colorWhite"
        android:id="@+id/mileageEditText"
        android:layout_alignBottom="@+id/mileageTextView"
        android:layout_alignLeft="@+id/gasTankSizeEditText"
        android:layout_alignStart="@+id/gasTankSizeEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tank Size"
        android:id="@+id/gasTankSizeTextView"
        android:padding="5dp"
        android:background="@color/color1AA"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:background="@color/colorWhite"
        android:id="@+id/gasTankSizeEditText"
        android:layout_alignBottom="@+id/gasTankSizeTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Add This Car!"
        android:textSize="16dp"
        android:background="@color/color1AA"
        android:textColor="@color/colorWhite"
        android:id="@+id/addCarButton"
        android:layout_below="@+id/gasTankSizeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
