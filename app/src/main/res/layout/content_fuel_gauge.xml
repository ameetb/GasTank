<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_fuel_gauge"
    tools:context="com.example.ameet.gastank.FuelGaugeActivity"
    android:background="@drawable/carbon_fiber">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:id="@+id/imageView"
        android:background="@drawable/rect"
        android:layout_marginTop="10dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/carNameTextView"
        android:layout_marginTop="20dp"
        android:text="Miles Remaining:"
        android:textColor="@color/colorWhite"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="30"
        android:id="@+id/milesRemainingText"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="100dp"
        android:layout_below="@+id/carNameTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/mileageTextView"
        android:text="Gallons Remaining:"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/milesRemainingText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/gallonsRemainingText"
        android:text="30"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/mileageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:text="Miles Traveled:"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/gallonsRemainingText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/milesTraveledText"
        android:text="30"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView7"
        android:text="EPA est. MPG:"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/milesTraveledText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/averageMpgText"
        android:text="30"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Push When Car in Use"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/usingCarButton"
        android:background="@color/colorRed"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_marginLeft="4dp"
        android:text="Push When Tank Full"
        android:textSize="16dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/tankFullButton"
        android:background="@color/color2C4"
        android:layout_alignTop="@+id/usingCarButton"
        android:layout_toRightOf="@+id/usingCarButton"
        android:layout_toEndOf="@+id/usingCarButton" />

</RelativeLayout>
